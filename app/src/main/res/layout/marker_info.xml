<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                             android:layout_height="match_parent">

    <ImageView
            android:layout_width="342dp"
            android:layout_height="239dp" tools:srcCompat="@tools:sample/avatars"
            android:id="@+id/image_url" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="60dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintVertical_chainStyle="packed"
            android:layout_marginBottom="22dp" app:layout_constraintBottom_toTopOf="@+id/description"
            app:layout_constraintHorizontal_bias="0.502" android:contentDescription="TODO"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="24dp"
            android:id="@+id/description" app:layout_constraintEnd_toEndOf="@+id/image_url"
