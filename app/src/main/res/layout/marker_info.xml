            app:layout_constraintTop_toBottomOf="@+id/image_url" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="18sp" android:textAlignment="center" android:textColor="@android:color/black"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/title" app:layout_constraintEnd_toEndOf="@+id/description"
            app:layout_constraintStart_toStartOf="@+id/description"
            android:layout_marginTop="40dp" app:layout_constraintTop_toBottomOf="@+id/description"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginBottom="91dp" android:textSize="30sp"
            android:textAlignment="center" android:textColor="@android:color/black" android:textAllCaps="false"
