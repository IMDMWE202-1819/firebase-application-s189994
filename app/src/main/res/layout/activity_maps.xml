<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             xmlns:map="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">
<fragment
        android:layout_width="match_parent"
        android:layout_height="match_parent"
          android:id="@+id/map"
          tools:context=".MapsActivity"
          android:name="com.google.android.gms.maps.SupportMapFragment"/>
    <android.support.design.widget.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true" map:srcCompat="@android:drawable/ic_menu_add"
            android:id="@+id/floatingActionButton" android:focusable="true"
            android:layout_marginTop="8dp"
            map:layout_constraintTop_toBottomOf="@+id/map" map:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" map:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" map:layout_constraintBottom_toBottomOf="parent"
            map:layout_constraintHorizontal_bias="1.0" map:layout_constraintVertical_bias="1.0"
            android:layout_marginBottom="8dp"/>
</android.support.constraint.ConstraintLayout>