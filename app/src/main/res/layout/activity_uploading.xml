<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadingActivity">

    <EditText
            android:layout_width="344dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_title_text"
            app:layout_constraintBottom_toTopOf="@+id/dialog_description_text"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.25"
            android:layout_marginBottom="20dp" android:hint="Title*"/>
    <EditText
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/dialog_description_text"
            app:layout_constraintStart_toStartOf="@+id/dialog_title_text" app:layout_constraintEnd_toEndOf="@+id/dialog_title_text"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="240dp"
            app:layout_constraintBottom_toBottomOf="parent" android:hint="Description"/>
    <Button
            android:text="Choose Image"
            android:layout_width="158dp"
            android:layout_height="wrap_content"
            android:id="@+id/btnChoose"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/dialog_description_text" app:layout_constraintEnd_toEndOf="@+id/dialog_description_text"
            app:layout_constraintStart_toStartOf="@+id/dialog_description_text" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.415" android:onClick="UploadOnClick"/>
    <TextView
            android:text="WHAT DID YOU SEE? "
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:id="@+id/textView2" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/dialog_title_text"
            android:textSize="18sp" android:textColor="@android:color/black" android:textAlignment="center"
            app:layout_constraintVertical_bias="0.312" app:layout_constraintHorizontal_bias="0.0"/>
    <ImageView
            android:id="@+id/imgView"
            android:layout_width="139dp"
            android:layout_height="97dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.17"
            android:layout_marginTop="24dp" app:layout_constraintTop_toBottomOf="@+id/btnChoose"/>
</android.support.constraint.ConstraintLayout>