<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UploadingActivity">

    <EditText
            android:layout_width="344dp"
            android:layout_height="51dp"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText3"
            app:layout_constraintBottom_toTopOf="@+id/editText4"
            app:layout_constraintEnd_toEndOf="@+id/textView2" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/textView2" app:layout_constraintHorizontal_bias="0.666"
            android:layout_marginBottom="8dp" android:hint="Name of bird*"/>
    <EditText
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/editText4"
            app:layout_constraintStart_toStartOf="@+id/editText3" app:layout_constraintEnd_toEndOf="@+id/editText3"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginBottom="288dp"
            app:layout_constraintBottom_toBottomOf="parent" android:hint="Description"/>
    <Button
            android:text="Add a picture"
            android:layout_width="314dp"
            android:layout_height="wrap_content"
            android:id="@+id/PictureAdd" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/UploadImage" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/editText4" app:layout_constraintEnd_toEndOf="@+id/editText4"
            app:layout_constraintStart_toStartOf="@+id/editText4" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.59" app:layout_constraintVertical_bias="1.0"/>
    <Button
            android:text="Upload"
            android:layout_width="104dp"
            android:layout_height="wrap_content"
            android:id="@+id/UploadImage" app:layout_constraintEnd_toEndOf="@+id/PictureAdd"
            app:layout_constraintStart_toStartOf="@+id/PictureAdd" android:layout_marginBottom="152dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.446"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/editText4"
            app:layout_constraintVertical_bias="1.0" android:layout_marginStart="8dp"/>
    <TextView
            android:text="WHAT TYPE OF BIRD DID YOU SEE? "
            android:layout_width="0dp"
            android:layout_height="27dp"
            android:id="@+id/textView2" android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="56dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/editText3"
            android:textSize="18sp" android:textColor="@android:color/black" android:textAlignment="center"
            app:layout_constraintVertical_bias="0.0" app:layout_constraintHorizontal_bias="0.0"/>
    <Button
            android:text="Go Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/BackButton" app:layout_constraintStart_toStartOf="@+id/UploadImage"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="@+id/UploadImage"
            android:layout_marginTop="44dp"
            app:layout_constraintTop_toBottomOf="@+id/UploadImage" app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>